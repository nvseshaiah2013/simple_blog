<% include ./partials/header %>

<div class="ui main text container">
    <h1 class="ui header huge"> A Simple Blog Application</h1>

    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blog.forEach(function(blogs){ %>
            <div class="item">
                <div class="image">
                    <img src="<%= blogs.image %>">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blogs._id %>/">
                        <%= blogs.title %></a>
                    <div class="meta"><span class="content">
                            <%= blogs.created.toDateString() %></span>

                    </div>
                    <div class="description">
                        <%= blogs.body %> ...
                    </div>
                    <div class="extra">
                        <a href="/blogs/<%= blogs._id %>" class="ui floated basic blue button">Read More
                            <i class="right chevron icon"></i></a>

                    </div>
                </div>
            </div>


            <% }); %>
        </div>
    </div>
</div>

<% include ./partials/footer %>